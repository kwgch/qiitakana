- provide(:title, @title)
.row
  %aside.col-md-4
    %section
      = gravatar_for @user
      %h1= link_to @user.username, @user
      %span
        %b= "#{@user.posts.count}Contribution"
    %section
      = render 'shared/stats'
  .col-md-8
    %h3= @title
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate
