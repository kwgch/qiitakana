.container.feed-page
  .row
    //.span8
    .col-lg-9
      .header{style:'padding-bottom: 10px;'}
        //%h2 プログラミング知識を共有しよう。
        %h2 Let's share the programming knowledge.
        = link_to 'ノウハウ・Tipsを投稿する', new_user_post_path(current_user), class: 'btn btn-primary'
      .stream-container
        %nav
          %ul.nav.nav-tabs
            %li.index-tab
              = link_to 'フィード', root_path
            %li.public_feeds-tab
              = link_to 'すべての投稿', home_public_path
            %li.mine-tab.pull-right
              = link_to '自分の投稿', home_mine_path
            %li.stock-tab.pull-right      
              = link_to 'ストック', 'javascript:alert("未実装")'
        .streams.feed-activities{id: 'item-content'}
          .following-stream.active
            %div
              .flush-button
              .activities
                = render 'shared/feed'
                = will_paginate @feed_items
    //.span3
    .col-lg-3
      .well.sidebar-nav{id: 'home-user_info'}
        .left
          = link_to gravatar_for(current_user), current_user
        .right
          .url_name
            = link_to current_user.username, current_user
          .current_user
            %span.count= "#{current_user.posts.count}"
            %span.unit= " Contribution"
            
= hidden_field_tag 'tab_class', @tab_class, id: 'tab_class'
:javascript
  $(function() {
    $('.' + $('#tab_class').val()).addClass('active')
  })