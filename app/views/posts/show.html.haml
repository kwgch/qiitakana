- model_class = Post
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:title)
      \:
  %dd= @post.title
  %dt
    %strong
      = model_class.human_attribute_name(:body)
      \:
  %dd= @post.body
  %dt
    %strong
      = model_class.human_attribute_name(:tags)
      \:
  //%dd= @post.tag_list.join(", ")
  %dd= @post.tag_list
  
= link_to t('.back', :default => t("helpers.links.back")), |
  user_posts_path(current_user), :class => 'btn btn-default'                  |
-#
= link_to t('.edit', :default => t("helpers.links.edit")), |
  edit_user_post_path(current_user, @post), :class => 'btn btn-default'       |
-#
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  user_posts_path(current_user, @post),                                                                                            |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'                                                                                   |
  
%br
%br
-# simple_form_for @post, wrapper: "vertical_form", :html => { :class => 'form-vertical' } do |f|
<div>
= simple_form_for [current_user, @post] do |f|
  = f.fields_for :comments, wrapper: "horizontal_form", html: { class: 'form-horizontal' } do |c|
    = "</div><div class='form-inline'>".html_safe if c.options[:child_index].even?
    = c.input :body, label: c.options[:child_index]+1, input_wrapper_html: { class: "col-xs-3" }   
  = f.button :submit, :class => 'btn-primary'
</div>