- model_class = Post
= simple_form_for [current_user, @post]  do |f|

  %p
    = f.input :title, label: false, placeholder: 'タイトル'

  .form-inline
    = f.fields_for :tags, wrapper: "horizontal_form", html: { class: 'form-horizontal' } do |t|
      = "</div><br><div class='form-inline'>".html_safe if t.options[:child_index].even?
      = t.input :name, label: false, input_wrapper_html: { class: "col-xs-4" }, placeholder: 'タグ'

  %p
    = f.input :markdown, label: false, placeholder: 'Markdown', input_html: {rows: 10}
    .bs-example= @post.body.nil? ? 'preview' : @post.body.html_safe
  
  %p.text-right
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), user_posts_path, class: 'btn btn-default'
